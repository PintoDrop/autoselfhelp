
<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.subject}}</h2>
      <div>
        Posted by {{post.user.name}} on {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.description}}
    </div>
  </article>

  {{#if post.Comments}}
    <section class="card">
      <div class="col-sm-2 col-form-label">
        <h3>Comments</h3>
      </div>
      </div>

      <div class="card-body">
        {{#each post.Comments as |comment| }}
          <div>
            <p>
              {{comment.comment}}
            </p>
            <p>
              &mdash; {{comment.user.name}}, {{format_date comment.createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="text-bg-primary p-3">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <label class="text-bg-secondary p-3 d-grid gap-2" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-control form-control-lg shadow-lg p-3 mb-5 bg-white rounded border border-primary" placeholder="Add your comment here"></textarea>

      <button type="submit" class="btn btn-info">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>