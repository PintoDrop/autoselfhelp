<div class="post card">
  <div class="card-header">
    <h2>Editing your post</h2>
  </div>
  {{!-- <form class="card-body"> --}}

    <input type="hidden" name="post-id" value="{{post.id}}" />

    <div class="text-bg-info p-3">
    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-subject" value="{{post.subject}}" class="form-control"  />

    <label class="form-label" for="post-description">Content</label>
    <textarea name="post-description" class="form-control" >{{post.description}}</textarea>

    <label class="form-label" for="post-year">Year</label>
    <textarea name="post-year" class="form-control" >{{post.year}}</textarea>

    <label class="form-label" for="post-make">Make</label>
    <textarea name="post-make" class="form-control" >{{post.make}}</textarea>

    <label class="form-label" for="post-model">Model</label>
    <textarea name="post-model" class="form-control" >{{post.model}}</textarea>
    
    </div>
    
    <button type="button" id="edit-post-form" class="btn btn-warning">Update</button>
  <br>
    <button type="button" id="delete-btn" class="btn btn-danger">Delete</button>
  {{!-- </form> --}}
</div>

<script src="/js/edit.js"></script>